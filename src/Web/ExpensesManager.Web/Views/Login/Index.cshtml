@{
    ViewData["Title"] = "Login";
    Layout = "_ExternalLayout";
}

<div class="row mt-5 mb-4 pt-4 d-flex justify-content-center">
    <form class="mt-3 col-lg-4">
        <fieldset>
            <h1 class="text-center mb-4">LOGIN</h1>
            <div class="mb-3">
                <input type="email" class="form-control input-font-size" id="identificationInput" placeholder="E-mail" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control input-font-size" id="passwordInput" placeholder="Senha" required maxlength="30">
            </div>
            <div>
                <button type="submit" class="button-font-size btn button-primary w-100">Entrar</button>
            </div>
        </fieldset>

        <div class="text-center text-lg-start d-flex">
            <p class="small mt-2 pt-1 mb-0">
                Não tem uma conta? <a href="/SignUp" class="fw-bold">Registre-se</a>
            </p>
        </div>
    </form>
</div>